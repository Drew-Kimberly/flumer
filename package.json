{
  "name": "@flumer/root",
  "private": true,
  "version": "0.0.0",
  "description": "A lightweight, highly extendable logger for both client and server JS applications",
  "author": {
    "name": "Drew Kimberly"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Drew-Kimberly/flumer"
  },
  "readme": "",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "check": "gts check",
    "clean": "lerna run clean --stream",
    "clean:core": "lerna run clean --scope=@flumer/core",
    "clean:logger": "lerna run clean --scope=@flumer/logger",
    "commit": "git-cz",
    "compile": "lerna run compile --stream",
    "compile:core": "lerna run compile --scope=@flumer/core",
    "compile:logger": "lerna run compile --scope=@flumer/logger",
    "deduplicate": "yarn-deduplicate",
    "fix": "gts fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "commitizen": "^4.2.2",
    "coveralls": "^3.1.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint-plugin-jest": "^24.1.3",
    "gts": "^3.0.3",
    "ini": "^1.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "node-fetch": "^2.6.1",
    "semantic-release": "^17.3.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "yarn-deduplicate": "^3.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
