{
  "extends": [
    "config:base",
    ":pinOnlyDevDependencies",
    ":semanticCommitScope({{parentDir}})"
  ],
  "commitMessagePrefix": null,
  "postUpgradeTasks": {
    "commands": [
      "yarn deduplicate"
    ]
  },
  "reviewers": [
    "Drew-Kimberly"
  ],
  "packageRules": [
    {
      "paths": [
        "+(package.json)",
        ".github"
      ],
      "extends": [
        ":semanticCommitScopeDisabled"
      ]
    },
    {
      "paths": [
        "packages/core"
      ],
      "branchPrefix": "renovate/core/"
    },
    {
      "paths": [
        "packages/logger"
      ],
      "branchPrefix": "renovate/logger/"
    },
    {
      "paths": [
        "sandbox/node"
      ],
      "branchPrefix": "renovate/sandbox-node/"
    }
  ]
}